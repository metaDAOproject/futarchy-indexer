{
  "name": "@themetadao/indexer-db",
  "description": "indexer database schema and migration runner",
  "private": "true",
  "main": "lib",
  "scripts": {
    "migrate:create": "drizzle-kit generate:pg --schema=./lib/schema.ts",
    "migrate": "pnpm migrate:create && bun src/index.ts",
    "migrate:push": "drizzle-kit push:pg --driver=pg --connectionString=$STAGING_FUTARCHY_PG_URL --schema=./lib/schema.ts",
    "push": "pnpm migrate:push && bun src/index.ts",
    "sql": "bun src/run-sql.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.6",
    "pg": "^8.11.3",
    "dotenv": "16.4.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "ansicolor": "^2.0.1",
    "as-table": "^1.0.55",
    "drizzle-kit": "^0.20.16",
    "inquirer": "^9.2.14"
  }
}
