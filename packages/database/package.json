{
  "name": "@themetadao/indexer-db",
  "description": "indexer database schema and migration runner",
  "private": "true",
  "main": "lib",
  "scripts": {
    "migrate:create": "drizzle-kit generate:pg --schema=./lib/schema.ts",
    "migrate": "pnpm migrate:create && bun src/index.ts",
    "sql": "bun src/run-sql.ts",
    "api": "genql --endpoint https://graph-api.themetadao.org/v1/graphql --output ../futarchy-ts/indexer-client -H \"X-Hasura-Admin-Secret: $HASURA_ADMIN_SECRET\""
  },
  "dependencies": {
    "drizzle-orm": "^0.30.6",
    "pg": "^8.11.3",
    "dotenv": "16.4.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "ansicolor": "^2.0.1",
    "as-table": "^1.0.55",
    "drizzle-kit": "^0.20.16",
    "inquirer": "^9.2.14",
    "@genql/cli": "6.3.3"
  }
}
