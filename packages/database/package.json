{
  "name": "@metadaoproject/indexer-db",
  "description": "indexer database schema and migration runner",
  "private": "true",
  "main": "lib",
  "scripts": {
    "migrate:create": "drizzle-kit generate --dialect=postgresql --schema=./lib/schema.ts",
    "migrate": "pnpm migrate:create && bun src/index.ts",
    "sync": "pnpm bun src/index.ts",
    "sql": "bun src/run-sql.ts"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "drizzle-orm": "0.36.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "ansicolor": "^2.0.1",
    "as-table": "^1.0.55",
    "drizzle-kit": "0.28.1",
    "inquirer": "^9.2.14"
  }
}
